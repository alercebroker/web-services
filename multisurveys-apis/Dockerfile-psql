FROM postgres:16

## Install build dependencies for Q3C
RUN apt-get update && apt-get install -y \
    build-essential \
    postgresql-server-dev-16 \
    git \
    wget \
    libzstd-dev \
    liblz4-dev \
    zlib1g-dev \
    libreadline-dev \
    && rm -rf /var/lib/apt/lists/*

## Clone and build Q3C extension
RUN git clone https://github.com/segasai/q3c.git /tmp/q3c
WORKDIR /tmp/q3c
RUN make && make install

## Clean up build dependencies to keep image size small
RUN apt-get purge -y \
    build-essential \
    postgresql-server-dev-16 \
    git \
    wget \
    libzstd-dev \
    liblz4-dev \
    zlib1g-dev \
    libreadline-dev \
    && apt-get autoremove -y \
    && rm -rf /tmp/q3c

## Create extension in template1 so all new databases have it available
RUN echo "CREATE EXTENSION IF NOT EXISTS q3c;" > /docker-entrypoint-initdb.d/init-q3c.sql
