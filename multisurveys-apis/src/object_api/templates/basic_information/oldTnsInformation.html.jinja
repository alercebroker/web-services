<link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0">
<link rel="stylesheet" href="{{API_URL}}/static/basic_information/basic_information_object.css">


<div class="tw-w-full">
    <table bordeer=1 frame=void rules=rows class="tw-truncate tw-w-[400px] tw-font-roboto tw-m-0 tw-w-[95%] tw-mx-auto"><colgroup><col><col><col></colgroup>
        <thead class="tw-text-[#BDBDBD] tw-text-sm">
            <td class="tw-text-center">Type</td>
            <td class="tw-text-center">Name</td>
            <td class="tw-text-center">Redshift</td>
        </thead>
        <tbody class="tw-w-[95%] tw-mx-auto">
            <tr class="hover:tw-bg-[#757575] tw-duration-200 tw-border-t tw-border-[#1e1e1e] dark:tw-border-white tw-border-opacity-20 dark:tw-border-opacity-20 tw-w-[95%] tw-mx-auto">
                <td id="type" class="tw-text-center tw-max-w-[40%]">{{object_type}}</td>
                <td id="name" class="tw-text-center">{{object_name}}</td>
                <td id="redshift" class="tw-text-center">{{redshift}}</td>
            </tr>
        </tbody>
    </table>
    <div class="tw-flex tw-justify-between tw-w-[95%] tw-mx-auto tw-font-roboto">
        <div class="tw-w-[50%] tw-text-xs">
            {% if "reporter" in tns_data["object_data"] and tns_data["object_data"]["reporter"] == "ALeRCE"%}
            <p>Discovered by {{discovery_data_source["group_name"]}}</p>

            <div class="tw-flex tw-relative">
                <span>Reported by ALeRCE</span>
                <div class="tw-relative tw-mx-2 tw-group group-hover:tw-flex group-hover:tw-flex-col">
                    <img class="" src="https://alerce-static.s3.amazonaws.com/logos/footerAlerceWhite.png" width="20" height="20">
                    <p class="tw-absolute tw-z-10 tw-p-4 tw-hidden tw-w-80 tw-bg-[#757575]/60 tw-text-[#FAFAFA] tw-text-left tw-text-normal tw-rounded dark:tw-bg-[#757575]/60 dark:tw-text-[#FAFAFA] group-hover:tw-block">{{discoverer}}</p>
                </div>
            </div>
            {% endif %}                        
        </div>
        <p class="tw-text-[#1e1e1e] dark:tw-text-white tw-h-auto tw-text-xs">
        Provided by
            <a id="tns-link" href="{{tns_link}}" target="_blank" class=" tw-inline tw-text-blue-600 tw-underline tw-cursor-pointer">TNS</a>  <img class="tw-inline" src="https://alerce-static.s3.amazonaws.com/logos/tns_icon_small.png">
        </p>
    </div>
</div>