  <!-- LSST row 2 -->
  <div class="flex items-start">
    <div class="w-16"></div>
    <div class="grid grid-cols-3 gap-4">
      <label class="flex items-center space-x-1">
        <input type="checkbox" name="bands.lsst[]" value="i" {% if 'i' in config_state.bands.lsst %}checked{% endif %}>
