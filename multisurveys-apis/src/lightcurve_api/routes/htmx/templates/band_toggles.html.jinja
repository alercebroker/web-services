        <input type="checkbox" name="bands.lsst[]" value="g" {% if 'g' in config_state.bands.lsst %}checked{% endif %}>
        <span class="text-gray-900 dark:text-gray-100">g</span>
      </label>
      <label class="flex items-center space-x-1">
        <input type="checkbox" name="bands.lsst[]" value="r" {% if 'r' in config_state.bands.lsst %}checked{% endif %}>
        <span class="text-gray-900 dark:text-gray-100">r</span>
