        function displayMenu() {

            if (boolDisplay === 1){
                document.getElementById('mySelect').style.display = 'block';
                boolDisplay = 0;
            } else {
                document.getElementById('mySelect').style.display = 'none';
                boolDisplay = 1;
            }
