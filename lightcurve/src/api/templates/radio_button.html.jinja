{% macro radio_button(value,checked, title, tooltip) %}
  <label>
  <input 
    id="radio-{{ value }}" 
    type="radio" 
    value="{{ value }}" 
    {% if checked %}checked{% endif %} 
  >
    <span>{{title}}</span>
    <div class="tooltip">
        <i class="fa fa-question-circle tw-me-2"></i>
        <div class="tooltip-text">
            {{tooltip}}
        </div>
    </div>
  </label>
{% endmacro %}

