{% macro radio_button(value,checked, title, tooltip, disabled=False) %}
<div class="tw-flex tw-flex-row">
  <div class="tw-basis-3/4">
    <label>
      <input 
        id="radio-{{ value }}" 
        type="radio" 
        value="{{ value }}" 
        {% if checked %}checked{% endif %} 
        {% if disabled %}disabled{% endif %}
      >
        <span>{{title}}</span>
    </label>
  </div>
  <div class="tooltip">
      <i class="fa fa-question-circle tw-me-2"></i>
      <div class="tooltip-text">
          {{tooltip}}
      </div>
  </div>
</div>
{% endmacro %}

