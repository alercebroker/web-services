<div id="lc-periodogram"
     hidden
     class="container tw-flex tw-flex-col tw-px-2 tw-mx-2">
    <div class="container">
        <div class="tw-w-full tw-ps-2">
            <input id="lc-periodogram-slider"
                   type="range"
                   name="period_slider"
                   min="0"
                   max="100"
                   step="0.000001"
                   class="tw-w-full tw-bg-black-500" />
        </div>
        <div class="transition-transform ease-in-out duration-500 transform">
            <input id="lc-periodogram-value"
                   type="number"
                   name="period_value"
                   min="0.050000"
                   max="500"
                   step="0.000001"
                   class="tw-border tw-border-gray-300 tw-rounded-md tw-p-2 tw-mt-2" />
            <button id="lc-periodogram-half"
                    class="tw-bg-green-500 dark:tw-bg-green-700 tw-text-white tw-mt-2 tw-px-2 tw-py-1 tw-rounded hover:tw-bg-green-600">
                /2
            </button>
            <button id="lc-periodogram-double"
                    class="tw-bg-green-500 dark:tw-bg-green-700 tw-text-white tw-mt-2 tw-px-2 tw-py-1 tw-rounded hover:tw-bg-green-600">
                x2
            </button>
        </div>
    </div>
    <div id="lc-periodogram-spinner"
         class="tw-place-self-center tw-place-content-center tw-place-items-center"
         hidden
         style="width: 100%;
                height: 100%;
                min-width: 0;
                min-height: 0">
        <div class="tw-border-t-transparent tw-border-solid tw-animate-spin tw-rounded-full tw-border-blue-400 tw-border-8 tw-h-32 tw-w-32 tw-m-auto">
        </div>
    </div>
    <div id="lc-periodogram-main"
         hidden
         style="width: 100%;
                height: 100%;
                min-width: 0;
                min-height: 256px;
                display: none"></div>
</div>
